config HAS_WEPLATFORM
	bool

menuconfig PADS
	bool "WSEN-PADS absolute pressure and temperature sensor"
	depends on I2C || SPI
	select HAS_WEPLATFORM
	help
	  Enable driver for the WSEN-PADS I2C/SPI-based absolute pressure sensor with integrated temperature sensor.

if PADS

choice PADS_TRIGGER_MODE
	prompt "Trigger mode"
	default PADS_TRIGGER_NONE
	help
	  Specify the type of triggering to be used by the driver.

config PADS_TRIGGER_NONE
	bool "No trigger"

config PADS_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select PADS_TRIGGER

config PADS_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select PADS_TRIGGER

endchoice # PADS_TRIGGER_MODE

config PADS_TRIGGER
	bool

config PADS_THREAD_PRIORITY
	int "Thread priority"
	depends on PADS_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config PADS_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on PADS_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

config PADS_ODR
	int "Output data rate"
	default 1
	range 0 200
	help
	  Sensor output data rate expressed in samples per second.
	  Data rates supported by the chip are:
	  0 Hz (Power down)
	  1 Hz
	  10 Hz
	  25 Hz
	  50 Hz
	  75 Hz
	  100 Hz
	  200 Hz

endif # PADS
