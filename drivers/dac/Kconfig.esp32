config DAC_ESP32
	bool "ESP32 DAC driver"
	default y
	depends on DT_HAS_ESPRESSIF_ESP32_DAC_ENABLED
	help
	  Enable the ESP32 DAC driver

config DAC_ESP32_DMA
	bool "ESP32 DAC DMA Support"
	default n
	depends on DAC_ESP32
	help
	  Enable the DAC DMA mode for DAC instances
