menuconfig UART_MMIO8
	bool "mmio8 serial driver"
	select SERIAL_HAS_DRIVER
	help
	  This option enables an transmit-only serial driver with
 	  a single memory-mapped address for writing data

config UART_MMIO8_BASE
       	hex "UART mmio8 base address"
	default 0x0
	depends on UART_MMIO8
	help
	  Set mmio8 base address
