# MAX30208 digital temperature sensor

# Copyright (c) 2021, Silvano Cortesi
# Copyright (c) 2021, ETH ZÃ¼rich
# SPDX-License-Identifier: Apache-2.0

menuconfig MAX30208
	bool "MAX30208 Digital Temperature Sensor"
	depends on I2C
	select RING_BUFFER

if MAX30208

config MAX30208_RINGBUFFER_SIZE
	int "Ring Buffer size"
	default 1
	help
	  Ring Buffer size for storage of elements from the FIFO in number of values.
	  Each value will occupy 16-bit.

config MAX30208_TRIGGER
	bool

choice MAX30208_TRIGGER_MODE
	prompt "Trigger mode"
	default MAX30208_TRIGGER_NONE
	help
	  Specify the type of triggering used by the driver.

config MAX30208_TRIGGER_NONE
	bool "No trigger"

config MAX30208_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select MAX30208_TRIGGER

config MAX30208_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select MAX30208_TRIGGER

endchoice # MAX30208_TRIGGER_MODE

config MAX30208_THREAD_PRIORITY
	int "Thread priority"
	depends on MAX30208_TRIGGER_OWN_THREAD && MAX30208_TRIGGER
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config MAX30208_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on MAX30208_TRIGGER_OWN_THREAD && MAX30208_TRIGGER
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # MAX30208
