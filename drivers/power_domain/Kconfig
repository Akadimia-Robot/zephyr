menuconfig POWER_DOMAIN
	bool "Power domain drivers"
	help
	  Include drivers for power domains in system config

if POWER_DOMAIN

module = POWER_DOMAIN
module-str = power_domain
source "subsys/logging/Kconfig.template.log_config"

config POWER_DOMAIN_GPIO
	bool "GPIO controlled power domain"
	depends on GPIO
	depends on TIMEOUT_64BIT

config POWER_DOMAIN_PSL
	bool "Power Switch Logic (PSL) controlled power domain"
	depends on GPIO
	depends on SOC_FAMILY_NPCX

config POWER_DOMAIN_INIT_PRIORITY
	int "Power domain driver init priority"
	default 75
	help
	  Power domain driver initialization priority.

endif
