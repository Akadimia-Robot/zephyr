menuconfig MAX30101
	bool "MAX30101 Pulse Oximeter and Heart Rate Sensor"
	depends on I2C
	select RING_BUFFER

if MAX30101

config MAX30101_RINGBUFFER_SIZE
	int "Ring Buffer size"
	default 1
	help
	  Ring Buffer size for storage of elements from the FIFO in number of values.
	  Each value will occupy 3x32-bit.

config MAX30101_TRIGGER
	bool

choice MAX30101_TRIGGER_MODE
	prompt "Trigger mode"
	default MAX30101_TRIGGER_NONE
	help
	  Specify the type of triggering used by the driver.

config MAX30101_TRIGGER_NONE
	bool "No trigger"

config MAX30101_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select MAX30101_TRIGGER

config MAX30101_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select MAX30101_TRIGGER

endchoice # MAX30101_TRIGGER_MODE

config MAX30101_THREAD_PRIORITY
	int "Thread priority"
	depends on MAX30101_TRIGGER_OWN_THREAD && MAX30101_TRIGGER
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config MAX30101_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on MAX30101_TRIGGER_OWN_THREAD && MAX30101_TRIGGER
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # MAX30101
