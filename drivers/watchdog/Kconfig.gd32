DT_COMPAT_GIGADEVICE_GD32_FWDGT := gd,gd32-fwdgt

config FWDGT_GD32
	bool "GD32 Free watchdog timer (FWDGT) driver"
	default $(dt_compat_enabled,$(DT_COMPAT_GIGADEVICE_GD32_FWDGT))
	select USE_GD32_FWDGT
	depends on (SOC_FAMILY_GD32 || SOC_SERIES_GD32VF103)
	help
	  Enable the Free watchdog timer (FWDGT) driver for GD32 SoCs.
