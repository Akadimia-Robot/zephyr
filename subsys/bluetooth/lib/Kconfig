menu "GATT Profiles"

config BT_BAS
	bool
	prompt "Bluetooth BAS support"
	default n
	help
	This option enable the GATT Battery Service.

config BT_CTS
	bool
	prompt "Bluetooth CTS support"
	default n
	help
	This option enable the GATT Current Time Service.

config BT_DIS
	bool
	prompt "Bluetooth DIS support"
	default n
	help
	This option enable the GATT Device Information Service.

config BT_HOG
	bool
	prompt "Bluetooth HoG support"
	default n
	help
	This option enable the HID over GATT Service.

config BT_HRS
	bool
	prompt "Bluetooth HRS support"
	default n
	help
	This option enable the GATT Heart Rate Service.

endmenu
