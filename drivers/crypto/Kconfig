#
# CRYPTO options
#
menuconfig CRYPTO
	bool "Crypto Drivers [EXPERIMENTAL]"

if CRYPTO

config CRYPTO_NAME
	string "Device name for crypto driver device"
	default "CRYPTO_0"

config CRYPTO_INIT_PRIORITY
	int "Crypto devices init priority"
	default 90
	help
	  Crypto devices initialization priority.

config SYS_LOG_CRYPTO_LEVEL
	int "Crypto drivers log level"
	default 0
	depends on SYS_LOG
	help
	  Sets log level for crypto drivers

	  Levels are:

	  - 0 OFF, do not write

	  - 1 ERROR, only write SYS_LOG_ERR

	  - 2 WARNING, write SYS_LOG_WRN in addition to previous level

	  - 3 INFO, write SYS_LOG_INF in addition to previous levels

	  - 4 DEBUG, write SYS_LOG_DBG in addition to previous levels

config CRYPTO_MAX_SESSION
	int "Maximum of sessions shim drivers can handle"
	default 2
	depends on CRYPTO_TINYCRYPT_SHIM || CRYPTO_MBEDTLS_SHIM
	help
	  This can be used to tweak the amount of sessions the driver
	  can handle in parallel.

config CRYPTO_SHIM
	bool
	help
	  Hidden option that's selected by crypto driver shims, in order to
	  select which features will be used.

choice
	prompt "Crypto driver backend"
	default CRYPTO_TINYCRYPT_SHIM

config CRYPTO_TINYCRYPT_SHIM
	bool "TinyCrypt shim driver [EXPERIMENTAL]"
	select TINYCRYPT
	select CRYPTO_SHIM
	help
	  Enable TinyCrypt shim layer compliant with crypto APIs.

config CRYPTO_MBEDTLS_SHIM
	bool "mbedTLS shim driver [EXPERIMENTAL]"
	select MBEDTLS
	select MBEDTLS_ENABLE_HEAP
	select CRYPTO_SHIM
	help
	  Enable mbedTLS shim layer compliant with crypto APIs. You will need
	  to fill in a relevant value to CONFIG_MBEDTLS_HEAP_SIZE.

config CRYPTO_ATAES132A
	bool "Atmel ATAES132A 32k AES Serial EEPROM support"
	depends on I2C
	help
	  Enable Atmel ATAES132A 32k AES Serial EEPROM support.

endchoice

if CRYPTO_ATAES132A

config CRYPTO_ATAES132A_I2C_PORT_NAME
	string "I2C master controller port name"
	default "I2C_0"
	help
	  Master I2C port name through which ATAES132A chip is accessed.

config CRYPTO_ATAES132A_I2C_ADDR
	hex "ATAES132A I2C address"
	default 0x50
	help
	  ATAES132A chip's I2C address.

choice
	prompt "ATAES132A I2C bus speed"
	default CRYPTO_ATAES132A_I2C_SPEED_STANDARD

config CRYPTO_ATAES132A_I2C_SPEED_STANDARD
	bool "Standard"
	help
	  Standard bis speed of up to 100KHz.

config CRYPTO_ATAES132A_I2C_SPEED_FAST
	bool "Fast"
	help
	  Fast bus speed of up to 400KHz.
endchoice

endif # CRYPTO_ATAES132A

if CRYPTO_SHIM

config CRYPTO_ENABLE_AES
	bool "Enable AES operations"
	default y

if CRYPTO_ENABLE_AES
config CRYPTO_ENABLE_AES_CBC
	bool "Enable CBC (block) mode for AES operations"

config CRYPTO_ENABLE_AES_CTR
	bool "Enable CTR (counter) mode for AES operations"

config CRYPTO_ENABLE_AES_CCM
	bool "Enable CCM mode for AES operations"

config CRYPTO_ENABLE_AES_CMAC
	bool "Enable CMAC with AES"
endif # CRYPTO_ENABLE_AES

config CRYPTO_ENABLE_ECC_DH
	bool "Enable ECC-DH"

config CRYPTO_ENABLE_SHA256
	bool "Enable SHA256"
	default y

config CRYPTO_ENABLE_HMAC_PRNG
	bool "Enable HMAC-based PRNG"
	select CRYPTO_ENABLE_SHA256

endif # CRYPTO_SHIM

endif # CRYPTO
