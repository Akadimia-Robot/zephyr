config UART_MCUX_FLEXCOMM
	bool "MCUX FLEXCOMM UART driver"
	depends on HAS_MCUX_FLEXCOMM || HAS_MCUX_SDK_DRIVER_FLEXCOMM_USART
	imply MCUX_FLEXCOMM_UART
	imply MCUX_SDK_DRIVER_FLEXCOMM_USART
	select SERIAL_HAS_DRIVER
	select SERIAL_SUPPORT_INTERRUPT
	help
	  Enable the MCUX USART driver.
