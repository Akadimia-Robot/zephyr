config LTR_329
	bool "LiteOn LTR-329 Ambient light sensor support"
	default y
	depends on DT_HAS_LITEON_LTR_329_ENABLED
	select I2C
	help
	  Enable driver for Lite-On LTR-329 ambient light sensor.
