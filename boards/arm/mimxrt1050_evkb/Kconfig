if BOARD_MIMXRT1050_EVKB || BOARD_MIMXRT1050_EVKB_QSPI

choice
	prompt "Code location selection"
	default CODE_ITCM

config CODE_ITCM
	bool "Link code into internal instruction tightly coupled memory (ITCM)"

config CODE_HYPERFLASH
	depends on BOARD_MIMXRT1050_EVKB
	select NXP_IMX_RT_BOOT_HEADER
	bool "Link code into external HyperFlash memory"

config CODE_QSPI
	depends on BOARD_MIMXRT1050_EVKB_QSPI
	select NXP_IMX_RT_BOOT_HEADER
	bool "Link code into external QSPI memory"

endchoice

endif # BOARD_MIMXRT1050_EVKB || BOARD_MIMXRT1050_EVKB_QSPI
