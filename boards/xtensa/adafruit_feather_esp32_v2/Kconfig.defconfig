config BOARD
	default "adafruit_feather_esp32_v2"
	depends on BOARD_ADAFRUIT_FEATHER_ESP32_V2

config ENTROPY_GENERATOR
	default y

config HEAP_MEM_POOL_SIZE
	default 98304 if WIFI
	default 40960 if BT
	default 4096

choice BT_HCI_BUS_TYPE
	default BT_ESP32 if BT
endchoice
