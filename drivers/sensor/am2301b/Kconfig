menuconfig AM2301B
	bool "Aosong AM2301B Humidity and Temperature Module"
	select I2C
	depends on DT_HAS_AOSONG_AM2301B_ENABLED
	default y
	help
	  Enable driver for Aosong AM2301B Humidity and Temperature Module.

if AM2301B

config AM2301B_CRC_CHECK
	bool "Use CRC Check"
	imply CRC
	default y
	help
	  Check the crc of measurement data.

endif # AM2301B
