config POSIX_CX_STRERROR_R
	bool "Get error message string"
	default y if POSIX_API
	select COMMON_LIBC_STRERROR
	help
	  Enable the strerror_r() POSIX C extension.

	  This function is a thread-safe version of ISO C strerror().
