#include "armv6-m.dtsi"

/ {
	cpus {
		cpu@0 {
			compatible = "arm,cortex-m0+";
		};
	};

	sram0: memory {
		compatible = "mmio-sram";
		reg = <0x1FFFF000 0x4000>;
	};

	soc {
		flash0: flash@0 {
			reg = <0 0x20000>;
		};

		i2c0: i2c@40066000 {
			compatible = "nxp,kinetis-i2c";
			reg = <0x40066000 0x1000>;
			interrupts = <8 0>;
			label = "I2C_0";
			status = "disabled";
		};

		i2c1: i2c@40067000 {
			compatible = "nxp,kinetis-i2c";
			reg = <0x40067000 0x1000>;
			interrupts = <9 0>;
			label = "I2C_1";
			status = "disabled";
		};

		uart0: uart@4006A000 {
			compatible = "nxp,kinetis-lpsci";
			reg = <0x4006A000 0xc>;
			interrupts = <12 0>;
			label = "UART_0";

			status = "disabled";
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <2>;
};
