/dts-v1/;
#include "stm32l562e_dk_common.dtsi"

/ {
	model = "STMicroelectronics STM32L562E-DK Discovery board";
	compatible = "st,stm32l562e-dk";

	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	aliases {
		led0 = &green_led_10;
		sw0 = &user_button;
	};
};

&cpu0 {
	cpu-power-states = <&stop0 &stop1 &stop2>;
};

&pinctrl {
	usart1_lp_tx_pa9: usart1_lp_tx_pa9 {
		pinmux = <STM32_PINMUX('A', 9, ANALOG)>;
	};
	usart1_lp_rx_pa10: usart1_lp_rx_pa10 {
		pinmux = <STM32_PINMUX('A', 10, ANALOG)>;
	};
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-1 = <&usart1_lp_tx_pa9 &usart1_lp_rx_pa10>;
};

&lptim1 {
	status = "okay";
};
