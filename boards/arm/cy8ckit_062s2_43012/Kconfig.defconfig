if BOARD_CY8CKIT_062S2_43012

config BOARD
	default "cy8ckit_062s2_43012"

if WIFI || BT

# Select CYW43XXX part and module
choice CYW43XXX_PART
	default CYW43012
endchoice

choice CYW43012_MODULE
	default CYW43012_MURATA_1LV
endchoice

endif # WIFI || BT

if WIFI

config WIFI_CYW43XXX
	default y

# Enable L2 Ethernet
config NET_L2_ETHERNET
	default y

endif # WIFI

if BT

# Select HCI components
config UART
	bool
	default y

config BT_UART
	default y

choice BT_HCI_BUS_TYPE
	default BT_H4
endchoice

config BT_CYW43XXX
	default y

# Disable ATT_ENFORCE_FLOW feature, CYW4343 informs about
# frees buffer (HCL Number Of Completed Packets event) after
# second packet. Refer to SWINTEGRATION-627.
config BT_ATT_ENFORCE_FLOW
	default n

endif # BT

endif   # BOARD_CY8CKIT_062S2_43012
