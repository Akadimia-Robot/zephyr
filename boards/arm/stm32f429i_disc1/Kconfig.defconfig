if BOARD_STM32F429I_DISC1

config BOARD
	default "stm32f429i_disc1"

config I2C
	default y if KSCAN

config SPI
	default y if DISPLAY

config MEMC
	default y if DISPLAY

config LV_Z_DISPLAY_DEV_NAME
	depends on LVGL
	default "LTDC" if STM32_LTDC

if KSCAN

config KSCAN_STMPE811
	default y

config KSCAN_STMPE811_INTERRUPT
	default y

endif # KSCAN

endif # BOARD_STM32F429I_DISC1
