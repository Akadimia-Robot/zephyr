menu "LVGL basic sample"

	config SAMPLE_LVGL_TOUCH_DRAWING
		bool "Enable touch drawing feature"
		depends on LV_Z_POINTER_INPUT
		help
		This allows test of touch functionality by drawing all recognized touch events on the screen.
endmenu

source "Kconfig.zephyr"
