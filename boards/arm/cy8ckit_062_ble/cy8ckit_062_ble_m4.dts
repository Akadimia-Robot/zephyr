/dts-v1/;

#include <cypress/psoc6_cm4.dtsi>

/ {
	model = "Cypress PSoC6 BLE Pioneer Kit";
	compatible = "cypress,cy8c6xx7_cm4", "cypress,psoc6";

	aliases {
		sw0 = &user_bt;
		led0 = &user_led;
		uart-6 = &uart6;
	};

	chosen {
		zephyr,sram = &sram2;
		zephyr,flash = &flash1;
		zephyr,console = &uart6;
		zephyr,shell-uart = &uart6;
	};

	leds {
		compatible = "gpio-leds";
		user_led: led_0 {
			label = "LED_0";
			gpios = <&p13 7 GPIO_ACTIVE_LOW>;
		};
	};

	gpio_keys {
		compatible = "gpio-keys";

		user_bt: button_0 {
			label = "SW_0";
			gpios = <&p0 4 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
		};
	};
};

&uart6 {
	status = "okay";
	current-speed = <115200>;

	pinctrl-0 = <&p13_0_uart6_rx &p13_1_uart6_tx>;
};
