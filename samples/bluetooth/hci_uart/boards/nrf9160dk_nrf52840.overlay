/ {
	chosen {
		zephyr,bt-c2h-uart=&uart1;
	};
};

&uart1 {
	compatible = "nordic,nrf-uarte";
	current-speed = <1000000>;
	status = "okay";
	hw-flow-control;
	tx-gpios = <&gpio0 17 0>;
	rx-gpios = <&gpio0 20 0>;
	rts-gpios = <&gpio0 15 0>;
	cts-gpios = <&gpio0 22 0>;
};
