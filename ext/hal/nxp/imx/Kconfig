config HAS_IMX_HAL
	bool
	select HAS_CMSIS
	depends on  SOC_FAMILY_IMX

if HAS_IMX_HAL

config HAS_IMX_IGPIO
	bool
	default n
	help
	  Set if the iMX GPIO (IGPIO) module is present in the SoC.


config HAS_IMX_UART
	bool
	default n
	help
	  Set if the low power uart (LPUART) module is present in the SoC.


config HAS_IMX_DRC
	bool
	default n
	help
	  Set if the RDC module is present in the SoC.


config HAS_IMX_CCM
	bool
	default n
	help
	  Set if the CCM module is present in the SoC.




endif # HAS_IMX_HAL
