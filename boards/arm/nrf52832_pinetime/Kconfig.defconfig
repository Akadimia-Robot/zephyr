if BOARD_NRF52832_PINETIME

config BOARD
	default "nrf52832_pinetime"

if I2C

config I2C_0
	default y

if I2C_0

choice I2C_0_NRF_TYPE
	default I2C_0_NRF_TWIM

endchoice

endif # I2C_0

endif # I2C

config BT_CTLR
	default BT

endif # BOARD_NRF52832_PINETIME
