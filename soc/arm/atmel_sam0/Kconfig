config SOC_FAMILY_SAM0
	bool
	select HAS_SEGGER_RTT

config SOC_FAMILY_SAMD2X
	bool
	select CPU_CORTEX_M0PLUS
	select SOC_FAMILY_SAM0
	select CPU_CORTEX_M_HAS_SYSTICK
	select CPU_CORTEX_M_HAS_VTOR
	select ASF
	select HAS_SYS_POWER_STATE_SLEEP_1
	select HAS_SYS_POWER_STATE_SLEEP_2
	select HAS_SYS_POWER_STATE_SLEEP_3
	select HAS_SYS_POWER_STATE_DEEP_SLEEP_1

if SOC_FAMILY_SAM0

config SOC_FAMILY
	string
	default "atmel_sam0"

source "soc/arm/atmel_sam0/common/Kconfig.samd2x"
source "soc/arm/atmel_sam0/*/Kconfig.soc"

endif
