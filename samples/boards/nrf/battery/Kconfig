choice
	prompt "Mode of battery measurement"
	default BATT_MODE_VOLT_DIV
	help
	  Specify method in which battery voltage should be mesaured

config BATT_MODE_VOLT_DIV
	bool "Use voltage divider"
	depends on BOARD_NRF52_PCA20020

config BATT_MODE_DIRECT
	bool "Direct on MCU"

endchoice

source "Kconfig.zephyr"
