config UART_XMC
	depends on SOC_SERIES_XMC_1XXX || SOC_SERIES_XMC_4XXX
	bool "XMC UART driver"
	select SERIAL_HAS_DRIVER
	depends on SOC_FAMILY_XMC && HAS_XMCLIB_UART
	help
	  This option enables the XMC UART driver, for UART_0.
