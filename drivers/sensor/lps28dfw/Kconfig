# ST Microelectronics LPS28DFW pressure and temperature sensor

# Copyright (c) 2023 STMicroelectronics
# SPDX-License-Identifier: Apache-2.0

menuconfig LPS28DFW
	bool "LPS28DFW pressure and temperature"
	default y
	depends on DT_HAS_ST_LPS28DFW_ENABLED
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_ST_LPS28DFW),i2c)
	select I3C if $(dt_compat_on_bus,$(DT_COMPAT_ST_LPS28DFW),i3c)
	select HAS_STMEMSC
	select USE_STDC_LPS28DFW
	help
	  Enable driver for LPS28DFW I2C-based pressure and temperature
	  sensor.

if LPS28DFW

choice LPS28DFW_TRIGGER_MODE
	prompt "Trigger mode"
	default LPS28DFW_TRIGGER_GLOBAL_THREAD
	help
	  Specify the type of triggering to be used by the driver.

config LPS28DFW_TRIGGER_NONE
	bool "No trigger"

config LPS28DFW_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select LPS28DFW_TRIGGER

config LPS28DFW_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select LPS28DFW_TRIGGER

endchoice # LPS28DFW_TRIGGER_MODE

config LPS28DFW_TRIGGER
	bool

config LPS28DFW_THREAD_PRIORITY
	int "Thread priority"
	depends on LPS28DFW_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config LPS28DFW_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on LPS28DFW_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # LPS28DFW
