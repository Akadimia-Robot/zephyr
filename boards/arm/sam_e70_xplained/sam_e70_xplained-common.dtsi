#include "sam_s70_xplained-common.dtsi"

/ {
	chosen {
		zephyr,canbus = &can0;
	};
};

&gmac {
	status = "okay";

	phy: phy {
		compatible = "ethernet-phy";
		status = "okay";
		address = <0>;
		mdio = <&mdio>;
	};
};

&mdio {
	status = "okay";
};

&can0 {
	status = "okay";
	pinctrl-0 = <&pb3a_can0_rx0 &pb2a_can0_tx0>;
	bus-speed = <125000>;
	sjw = <1>;
	sample-point = <875>;
	bus-speed-data = <1000000>;
	sjw-data = <1>;
	sample-point-data = <875>;
};
