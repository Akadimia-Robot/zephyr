mainmenu "SPI Loopback Test"

config SPI_LOOPBACK_MODE_LOOP
	bool "Configure the SPI in LOOP mode, so that no extra wiring is needed"

config SPI_ASYNC
	default y if !SPI_MCUX_FLEXCOMM && !SPI_CC13XX_CC26XX && !SPI_STM32_DMA

config SPI_STM32_INTERRUPT
	default SPI_STM32 && !SPI_STM32_DMA

config SPI_ESP32_INTERRUPT
	default ESP32_SPIM

config SPI_MCUX_FLEXCOMM_DMA
	default SPI_MCUX_FLEXCOMM

config SPI_MCUX_LPSPI_DMA
	default SPI_MCUX_LPSPI

config SPI_0_NRF_ORC
	default 0x00
config SPI_1_NRF_ORC
	default 0x00
config SPI_2_NRF_ORC
	default 0x00
config SPI_3_NRF_ORC
	default 0x00

source "Kconfig.zephyr"
