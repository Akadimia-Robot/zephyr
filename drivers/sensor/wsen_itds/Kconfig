config HAS_WEPLATFORM
	bool

menuconfig ITDS
	bool "WSEN-ITDS 3-axis acceleration sensor"
	depends on I2C || SPI
	select HAS_WEPLATFORM
	help
	  Enable driver for the WSEN-ITDS I2C/SPI-based acceleration sensor with integrated temperature sensor.

if ITDS

choice ITDS_TRIGGER_MODE
	prompt "Trigger mode"
	default ITDS_TRIGGER_NONE
	help
	  Specify the type of triggering to be used by the driver.

config ITDS_TRIGGER_NONE
	bool "No trigger"

config ITDS_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ITDS_TRIGGER

config ITDS_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ITDS_TRIGGER

endchoice # ITDS_TRIGGER_MODE

config ITDS_TRIGGER
	bool

config ITDS_THREAD_PRIORITY
	int "Thread priority"
	depends on ITDS_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ITDS_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ITDS_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

config ITDS_TAP
	bool "Tap and double tap detection"
	depends on ITDS_TRIGGER
	help
	  Enable tap (single/double) detection
	  Note that the minimum ODR required for using the tap recognition functionality is 400 Hz.

config ITDS_FREEFALL
	bool "Free-fall detection"
	depends on ITDS_TRIGGER
	help
	  Enable free-fall detection

config ITDS_DELTA
	bool "Wake-up detection (SENSOR_TRIG_DELTA)"
	depends on ITDS_TRIGGER
	help
	  Enable wake-up detection (SENSOR_TRIG_DELTA)

endif # ITDS
