/dts-v1/;
#include <arm/renesas/gen3/r8a77951.dtsi>
#include "rcar_h3_kingfisher_cr7-pinctrl.dtsi"

/ {
	model = "Renesas h3+kingfisher board";
	compatible = "renesas,h3-kingfisher-cr7";

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &scif1;
		zephyr,shell-uart = &scif1;
		zephyr,canbus = &can0;
	};

	leds {
		compatible = "gpio-leds";
		user_led: led_5 {
			gpios = <&gpio6 12 GPIO_ACTIVE_HIGH>;
			label = "User LED";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: sw3 {
			gpios = <&gpio6 11 GPIO_ACTIVE_LOW>;
			label = "User switch";
		};
	};

	aliases {
		led0 = &user_led;
		sw0 = &user_button;
	};
};

&cmt0 {
	status = "okay";
	clock-frequency = <32000>;
};

&gpio5 {
	status = "okay";
};

&gpio6 {
	status = "okay";
};

&can0 {
	pinctrl-0 = <&can0_data_a_tx_default &can0_data_a_rx_default>;
	pinctrl-names = "default";
	status = "okay";
	bus-speed = <125000>;

	can-transceiver {
		max-bitrate = <5000000>;
	};
};

&can1 {
	pinctrl-0 = <&can1_data_a_tx_default &can1_data_a_rx_default>;
	pinctrl-names = "default";
	status = "okay";
	bus-speed = <125000>;

	can-transceiver {
		max-bitrate = <5000000>;
	};
};

&scif1 {
	pinctrl-0 = <&scif1_data_a_tx_default &scif1_data_a_rx_default>;
	pinctrl-names = "default";
	status = "okay";
};

&i2c2 {
	status = "okay";
	mux: pca9548@71 {
		compatible = "ti,tca9548a";
		reg = <0x71>;
		#address-cells = <1>;
		#size-cells = <0>;
		reset-gpios = <&gpio5 3 GPIO_ACTIVE_LOW>;
		status = "okay";
		label = "i2c2_pca9548_mux";

		mux_i2c@7 {
			compatible = "ti,tca9548a-channel";
			reg = <7>;
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";
			label = "Audio";

			acc_mag: lsm9ds0_acc_mag@1d {
				compatible = "st,lsm9ds0-mfd";
				reg = <0x1d>;
				label = "lsm9ds0_acc_mag";
			};

			gyro: lsm9ds0_gyr@6b {
				compatible = "st,lsm9ds0-gyro";
				reg = <0x6b>;
				label = "lsm9ds0_gyr";
			};
		};
	};
};

&i2c4 {
	status = "okay";
};
